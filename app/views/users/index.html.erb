<%= render "layouts/menu" %>

<html>
    <body>
        <h1>User index</h1>
        <%= link_to "Nuevo usuario", new_user_path %>
        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                </tr>
            </thead>
                <tbody id="users">
                    <% @users.each do |user| %>
                        <tr>
                            <td><%= user.first_name %></td>
                            <td><%= user.last_name %></td>
                            <td><%= user.email %></td>
                            <td><%= link_to 'Show', user_path(user) %></td>
                        </tr>
                <% end %>
            </tbody>
        </table>
    </body>
</html>